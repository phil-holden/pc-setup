{
  "$schema": "https://raw.githubusercontent.com/JanDeDobbeleer/oh-my-posh/main/themes/schema.json",
  "blocks": [
    {
      "type": "newline"
    },
    {
      "alignment": "right",
      "segments": [
        {
          "type": "az",
          "style": "diamond",
          "leading_diamond": "\uE0B6",
          "trailing_diamond": "\uE0B4",
          "foreground": "#000000",
          "background": "#9ec3f0",
          "properties": {
            "display_id": true,
            "display_name": true,
            "info_separator": " @ ",
            "prefix": " \uFD03 "
          }
        }
      ],
      "type": "prompt",
      "vertical_offset": -1
    },
    {
      "type": "newline"
    },
    {
      "alignment": "left",
      "segments": [
        {
          "background": "#95ffa4",
          "foreground": "#193549",
          "powerline_symbol": "",
          "style": "powerline",
          "type": "git"
        },
        {
          "background": "#ffffff",
          "foreground": "#100e23",
          "powerline_symbol": "\uE0B0",
          "properties": {
            "folder_icon": "\uF115",
            "folder_separator_icon": "  ",
            "home_icon": "\uF015",
            "style": "agnoster_full",
            "mapped_locations": [
              [
                "c:\\code",
                ".."
              ]
            ],
            "mapped_locations_enabled": true
          },
          "style": "powerline",
          "type": "path"
        }
      ],
      "type": "prompt"
    },
    {
      "type": "newline"
    },
    {
      "alignment": "left",
      "segments": [
        {
          "foreground": "#B48EAD",
          "properties": {
            "always_enabled": true,
            "display_exit_code": false,
            "error_color": "#BF616A",
            "prefix": "❯"
          },
          "style": "plain",
          "type": "exit"
        }
      ],
      "type": "prompt"
    }
  ],
  "final_space": true
}
